<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/CCl_Test_LL"
    android:background="#27386C"
    android:orientation="vertical"
    tools:context=".Activity.CCL_TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:onClick="OnBackpress"
            android:padding="3dp"
            android:rotation="180"
            android:src="@drawable/ic_arrow"
            app:tint="@color/white"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:text="CCL Test"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!--  <ImageView
              android:id="@+id/language_IV"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="250dp"
              android:padding="3dp"
              android:src="@drawable/globe"
              app:tint="@color/white"
              tools:ignore="RtlHardcoded">

          </ImageView>-->
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_marginBottom="8dp"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#27386C"
        android:scrollbars="horizontal"
        android:textAlignment="center"
        app:tabBackground="@drawable/tab_background"
        app:tabGravity="fill"
        app:tabIndicator="@color/darkWhite"
        app:tabInlineLabel="true"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/MyCustomTabText"
        app:tabTextColor="@color/white" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/morebg" />


</LinearLayout>



